<%= form_for(@fugitive) do |f| %>
  <% if @fugitive.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@fugitive.errors.count, "error") %> prohibited this fugitive from being saved:</h2>

      <ul>
      <% @fugitive.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :captured %><br />
    <%= f.check_box :captured %>
  </div>
  <div class="field">
    <%= f.label :image_url %><br />
    <%= f.text_field :image_url %>
  </div>
  <div class="field">
    <%= f.label :age %><br />
    <%= f.text_field :age %>
  </div>
  <div class="field">
    <%= f.label :height_feet %><br />
    <%= f.text_field :height_feet %>
  </div>
  <div class="field">
    <%= f.label :height_inches %><br />
    <%= f.text_field :height_inches %>
  </div>
  <div class="field">
    <%= f.label :weight %><br />
    <%= f.text_field :weight %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
