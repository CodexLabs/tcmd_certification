exports.DetailWindow = function(args) {
	var ui = require_once('js/app/common/ui');
	
	var win = ui.window('Jeff Haynie');
	var backBtn = ui.view({
		width:70,
		height:30,
		backgroundImage:'images/back.png',
		left:5
	});
	backBtn.add(ui.label('Back'));
	win.addHeaderChild(backBtn);
	
	backBtn.addEventListener('click', function() {
		win.close();
	});

	return win;
};