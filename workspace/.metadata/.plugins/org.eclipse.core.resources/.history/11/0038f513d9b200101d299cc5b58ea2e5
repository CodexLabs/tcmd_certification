exports.create = function(args) {
	var ui = require_once('js/ui');

	var win = ui.window('fugitives',{
		exitOnClose:true
	});
	var placeholder = ui.label('showing fugitives', {
		color:'#fff'
	});
	placeholder.addEventListener('click', function() {
		var DetailWindow = require_once('js/app/DetailWindow');
		DetailWindow.create().open();
	});

	win.addChild(placeholder);

	var tabs = ui.tabView({
		name:'fugitives',
		on:'images/fugitives_on.png',
		off:'images/fugitives_off.png'
	}, {
		name:'captured',
		on:'images/captured_on.png',
		off:'images/captured_off.png'
	}, {
		bottom:0
	});
	win.addChild(tabs);

	tabs.addEventListener('tabChange', function(e) {
		if (e.index === 0) {
			placeholder.text = 'showing fugitives';
			win.updateTitle('fugitives');
		}
		else {
			placeholder.text = 'showing captured';
			win.updateTitle('captured');
		}
	});
	
	return win;
};